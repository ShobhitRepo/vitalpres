{
  "openapi": "3.0.3",
  "info": {
    "title": "Vitals Table Structure API",
    "description": "API to retrieve the database structure/schema for the vitals table",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://18.217.160.89:3000",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/tables/vitals/structure": {
      "get": {
        "summary": "Get vitals table structure",
        "description": "Retrieves the database schema structure for the vitals table including column names, data types, and nullable constraints",
        "operationId": "getVitalsTableStructure",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved vitals table structure",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TableColumn"
                  }
                },
                "example": [
                  {
                    "column_name": "vital_id",
                    "data_type": "integer",
                    "is_nullable": "NO"
                  },
                  {
                    "column_name": "patient_id",
                    "data_type": "integer",
                    "is_nullable": "NO"
                  },
                  {
                    "column_name": "recorded_date",
                    "data_type": "timestamp without time zone",
                    "is_nullable": "NO"
                  },
                  {
                    "column_name": "blood_pressure",
                    "data_type": "character varying",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "heart_rate",
                    "data_type": "integer",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "respiratory_rate",
                    "data_type": "integer",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "temperature",
                    "data_type": "numeric",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "height",
                    "data_type": "numeric",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "weight",
                    "data_type": "numeric",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "bmi",
                    "data_type": "numeric",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "oxygen_saturation",
                    "data_type": "integer",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "notes",
                    "data_type": "text",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "recorded_by",
                    "data_type": "character varying",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "created_at",
                    "data_type": "timestamp without time zone",
                    "is_nullable": "YES"
                  },
                  {
                    "column_name": "updated_at",
                    "data_type": "timestamp without time zone",
                    "is_nullable": "YES"
                  }
                ]
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing bearer token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Unauthorized",
                  "message": "Invalid or missing bearer token"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Insufficient permissions",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Forbidden",
                  "message": "Insufficient permissions to access table structure"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Internal Server Error",
                  "message": "Unable to retrieve table structure"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Bearer token authentication required"
      }
    },
    "schemas": {
      "TableColumn": {
        "type": "object",
        "required": [
          "column_name",
          "data_type",
          "is_nullable"
        ],
        "properties": {
          "column_name": {
            "type": "string",
            "description": "Name of the database column",
            "example": "vital_id"
          },
          "data_type": {
            "type": "string",
            "description": "PostgreSQL data type of the column",
            "example": "integer",
            "enum": [
              "integer",
              "character varying",
              "timestamp without time zone",
              "numeric",
              "text"
            ]
          },
          "is_nullable": {
            "type": "string",
            "description": "Whether the column accepts NULL values",
            "example": "NO",
            "enum": ["YES", "NO"]
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "error",
          "message"
        ],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error type"
          },
          "message": {
            "type": "string",
            "description": "Human-readable error message"
          }
        }
      }
    }
  }
}